{
  "health": {
    "enabled": true
  },
  "http_server": {
    "port": "8000"
  },
  "websocket": {
    "handler_prefix": "/ws/connection/websocket"
  },
  "client": {
    "proxy": {
      "connect": {
        "enabled": true,
        "timeout": "5s",
        "http_headers": ["Authorization"]
      }
    }
  },
  "channel": {
    "proxy": {
      "subscribe": {
        "timeout": "5s",
        "http_headers": ["Authorization"]
      }
    },
    "namespaces": [
      {
        "name": "workflow",
        "allow_subscribe_for_client": true,
        "allow_subscribe_for_anonymous": false,
        "allow_publish_for_subscriber": false,
        "allow_publish_for_client": false,
        "allow_publish_for_anonymous": false,
        "presence": true,
        "allow_presence_for_subscriber": true,
        "allow_presence_for_client": true,
        "history_size": 50,
        "history_ttl": "600s",
        "allow_history_for_subscriber": true,
        "allow_history_for_client": true,
        "join_leave": true
      }
    ]
  }
}
