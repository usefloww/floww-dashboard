# Database
DATABASE_URL=postgresql://admin:secret@localhost:5432/floww
DATABASE_NAME=floww

# Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
ENCRYPTION_KEY=

# Authentication
AUTH_TYPE=workos
AUTH_CLIENT_ID=
AUTH_CLIENT_SECRET=

# WorkOS (if AUTH_TYPE=workos)
WORKOS_API_KEY=
WORKOS_CLIENT_ID=

# OIDC (if AUTH_TYPE=oidc)
AUTH_ISSUER_URL=

# Session & JWT
JWT_SECRET=
SESSION_SECRET=

# Centrifugo (WebSockets)
CENTRIFUGO_URL=http://localhost:8000
CENTRIFUGO_API_KEY=
CENTRIFUGO_SECRET=

# Runtime Configuration
RUNTIME_TYPE=docker
# RUNTIME_TYPE=lambda
# AWS_REGION=us-east-1
# LAMBDA_ROLE_ARN=
# LAMBDA_FUNCTION_PREFIX=floww-

# AWS Credentials (for Lambda, S3, ECR)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Registry
REGISTRY_TYPE=dockerhub
REGISTRY_URL=https://registry-1.docker.io
# REGISTRY_USERNAME=
# REGISTRY_PASSWORD=

# Stripe Billing (optional, for SaaS)
IS_CLOUD=false
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_TEAM=

# AI Generation (optional)
AI_PROVIDER=openai
OPENAI_API_KEY=
# AI_PROVIDER=anthropic
# ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=
# Model for AI workflow generation (via OpenRouter)
# Options: anthropic/claude-sonnet-4.5, anthropic/claude-3.5-sonnet, openai/gpt-4o, etc.
AI_MODEL_CODEGEN=anthropic/claude-sonnet-4.5

# Langfuse (LLM observability/tracing)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com
LANGFUSE_OTEL_HOST=https://cloud.langfuse.com

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=info

# Client-side Sentry (VITE_* vars are bundled into client JS)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Worker
WORKER_CONCURRENCY=5

# Single Organization Mode (for self-hosting)
SINGLE_ORG_MODE=false

# Admin Panel
ADMIN_EMAIL=
ADMIN_PASSWORD=
